<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>
        <item name="android:windowEnterTransition" tools:ignore="NewApi">@android:transition/explode</item>
        <item name="android:windowExitTransition" tools:ignore="NewApi">@android:transition/explode</item>
        <item name="sublimePickerStyle">@style/ModdedSublimePickerStyle</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="ModdedSublimePickerStyle" parent="SublimePickerStyleLight">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
</resources>